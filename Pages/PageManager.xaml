<Page x:Class="WpfShopCSharp.Pages.PageManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfShopCSharp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageManager"
      Background="PaleTurquoise">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Меню менеджера"
                       HorizontalAlignment="Center"
                       Padding="20"/>
            <Button Name="btnSeeProduct"
                    Click="btnSeeProduct_Click"
                    Content="Просмотреть товары"/>
            <Button Name="btnAddProduct"
                    Click="btnAddProduct_Click"
                    Content="Добавить товары"/>
            <Button Name="btnGoBack"
                    Click="btnGoBack_Click"
                    Content="Вернуться"/>
        </StackPanel>
    </Grid>
</Page>
